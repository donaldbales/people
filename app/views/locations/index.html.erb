<p id="notice"><%= notice %></p>

<h1>Listing Locations</h1>

<table>
  <thead>
    <tr>
      <th>Location type</th>
      <th>Parent</th>
      <th>Code</th>
      <th>Description</th>
      <th>Active datetime</th>
      <th>Inactive datetime</th>
      <th>Level</th>
      <th>Context</th>
      <th>Context code</th>
      <th>Context description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= location.location_type_id %></td>
        <td><%= location.parent_id %></td>
        <td><%= location.code %></td>
        <td><%= location.description %></td>
        <td><%= location.active_datetime %></td>
        <td><%= location.inactive_datetime %></td>
        <td><%= location.level %></td>
        <td><%= location.context_id %></td>
        <td><%= location.context_code %></td>
        <td><%= location.context_description %></td>
        <td><%= link_to 'Show', location %></td>
        <td><%= link_to 'Edit', edit_location_path(location) %></td>
        <td><%= link_to 'Destroy', location, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

